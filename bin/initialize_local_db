#!/bin/bash

DB_HOSTNAME=${DB_HOSTNAME:-localhost}
DB_PORT=${DB_PORT:-5432}

psql -h $DB_HOSTNAME -p $DB_PORT -U postgres \
    -c "CREATE USER shishakai WITH PASSWORD 'shishakai';"

psql -h $DB_HOSTNAME -p $DB_PORT -U postgres \
    -c "CREATE DATABASE shishakai WITH OWNER shishakai;"

psql -h $DB_HOSTNAME -p $DB_PORT -U shishakai \
    -c "CREATE TABLE tweeted_pages (uri VARCHAR(128));" \
    shishakai
